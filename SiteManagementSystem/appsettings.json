{
  "JwtSettings": {
    "Key": "ThisIsASecretKeyUsedForJwtTokenEncryption", // 🔐 Secret key (never check into GitHub)
    "Issuer": "MyAuthServer", // 👤 Who issues the token
    "Audience": "MyApiClient", // 🎯 Who is allowed to use the token
    "ExpiryMinutes": 30, // ⏳ Access token expiration
    "RefreshTokenExpiryDays": 7 // 🔁 Refresh token expiration
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
